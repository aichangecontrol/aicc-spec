{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aichangecontrol.com/aicc-spec/schema.json",
  "title": "AICC Specification v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "goal", "scope", "acceptance_criteria", "plan", "outputs"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "goal": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowed_paths"],
      "properties": {
        "allowed_paths": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "guardrails": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["step"],
        "properties": {
          "step": {
            "type": "string",
            "minLength": 1
          },
          "verify": {
            "type": "string",
            "minLength": 1
          },
          "approval": {
            "type": "string",
            "enum": ["required"]
          }
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifacts"],
      "properties": {
        "artifacts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["pull_request", "test_results", "ui_snapshots", "audit_log"]
          }
        }
      }
    }
  }
}
